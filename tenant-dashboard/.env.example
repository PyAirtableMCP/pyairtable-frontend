# ====================
# PYAIRTABLE FRONTEND ENVIRONMENT CONFIGURATION
# ====================

# Application
NEXT_PUBLIC_APP_NAME="PyAirtable Tenant Dashboard"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_APP_ENV="development"

# Backend Services
# Auth Service (Authentication & User Management)
NEXT_PUBLIC_AUTH_SERVICE_URL="http://localhost:8082"
AUTH_SERVICE_URL="http://localhost:8082"

# API Gateway (Main API Endpoint)
NEXT_PUBLIC_API_GATEWAY_URL="http://localhost:8080"
API_GATEWAY_URL="http://localhost:8080"

# Legacy API URL (for backward compatibility)
NEXT_PUBLIC_API_URL="http://localhost:8080"

# Workspace Service (if separate)
NEXT_PUBLIC_WORKSPACE_SERVICE_URL="http://localhost:8003"

# Platform API (if different from gateway)
NEXT_PUBLIC_PLATFORM_API_URL="http://localhost:8080"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:5173"
NEXTAUTH_SECRET="your-super-secret-key-here-change-in-production"

# OAuth Providers (Optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# Database (if needed for NextAuth)
DATABASE_URL="postgresql://user:password@localhost:5432/pyairtable_frontend"

# External Services
# Sentry (Error Monitoring)
SENTRY_DSN=""
SENTRY_ORG=""
SENTRY_PROJECT=""
NEXT_PUBLIC_SENTRY_DSN=""

# PostHog (Analytics)
NEXT_PUBLIC_POSTHOG_KEY=""
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS="true"
NEXT_PUBLIC_ENABLE_ERROR_REPORTING="true"
NEXT_PUBLIC_ENABLE_DEBUG_MODE="false"
NEXT_PUBLIC_ENABLE_OFFLINE_MODE="true"

# API Configuration
NEXT_PUBLIC_API_TIMEOUT="30000"
NEXT_PUBLIC_API_RETRY_ATTEMPTS="3"
NEXT_PUBLIC_API_RETRY_DELAY="1000"

# WebSocket Configuration (for real-time features)
NEXT_PUBLIC_WS_URL="ws://localhost:8080/ws"
NEXT_PUBLIC_ENABLE_REALTIME="true"

# File Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE="10485760"  # 10MB
NEXT_PUBLIC_ALLOWED_FILE_TYPES="image/*,application/pdf,.csv,.xlsx"

# Cache Configuration
NEXT_PUBLIC_CACHE_TTL="300000"  # 5 minutes
NEXT_PUBLIC_ENABLE_CACHE="true"

# Development/Debug Settings
NEXT_PUBLIC_DEBUG_API="false"
NEXT_PUBLIC_LOG_LEVEL="info"

# Security Headers
NEXT_PUBLIC_CSP_ENABLED="true"
NEXT_PUBLIC_HSTS_ENABLED="true"

# ====================
# PRODUCTION OVERRIDES
# ====================
# For production deployments, override these values:

# Production Backend URLs
# NEXT_PUBLIC_AUTH_SERVICE_URL="https://auth.yourdomain.com"
# NEXT_PUBLIC_API_GATEWAY_URL="https://api.yourdomain.com"
# NEXT_PUBLIC_WORKSPACE_SERVICE_URL="https://workspace.yourdomain.com"

# Production NextAuth
# NEXTAUTH_URL="https://dashboard.yourdomain.com"
# NEXTAUTH_SECRET="your-production-secret-key"

# Production Database
# DATABASE_URL="postgresql://user:password@db.yourdomain.com:5432/pyairtable_prod"

# Production Feature Flags
# NEXT_PUBLIC_ENABLE_DEBUG_MODE="false"
# NEXT_PUBLIC_LOG_LEVEL="error"
# NEXT_PUBLIC_DEBUG_API="false"