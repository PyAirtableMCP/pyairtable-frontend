# Environment Configuration Template
# Copy this file to .env.local and replace placeholder values with real credentials
# IMPORTANT: Never commit .env.local - it contains sensitive credentials

# Backend Services URLs
# Configure these to match your actual service deployment
NEXT_PUBLIC_AUTH_SERVICE_URL="http://localhost:8007"
NEXT_PUBLIC_API_GATEWAY_URL="http://localhost:8000"
NEXT_PUBLIC_WORKSPACE_SERVICE_URL="http://localhost:8006"

# NextAuth Configuration
# Update the URL to match your frontend deployment
NEXTAUTH_URL="http://localhost:5173"
# SECURITY: Generate a secure random secret for production
NEXTAUTH_SECRET="your-secure-nextauth-secret-change-this"

# Development flags (disable in production)
NEXT_PUBLIC_ENABLE_DEBUG_MODE="false"
NEXT_PUBLIC_DEBUG_API="false"
NEXT_PUBLIC_LOG_LEVEL="info"

# Feature flags
NEXT_PUBLIC_ENABLE_ANALYTICS="true"
NEXT_PUBLIC_ENABLE_ERROR_REPORTING="true"

# Airtable Integration
# Get your tokens from: https://airtable.com/create/tokens
# SECURITY: Never commit real tokens to git
NEXT_PUBLIC_AIRTABLE_TOKEN="patXXXXXXXXXXXXXX.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
NEXT_PUBLIC_AIRTABLE_BASE_ID="appXXXXXXXXXXXXXX"
AIRTABLE_TOKEN="patXXXXXXXXXXXXXX.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
AIRTABLE_BASE_ID="appXXXXXXXXXXXXXX"

# Database Configuration (if needed)
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"

# Additional service configurations
REDIS_URL="redis://localhost:6379"
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@domain.com"
SMTP_PASS="your-app-password"